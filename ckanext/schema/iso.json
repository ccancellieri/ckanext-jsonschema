{
    "type": "object",
    "title": "Metadata",
    "additionalProperties": false,
    "required": [
        "fileIdentifier",
        "metadataStandardName",
        "metadataStandardVersion",
        "characterSet",
        "dataIdentification"
    ],
    "properties": {
        "fileIdentifier": {
            "propertyOrder": 1,
            "title": "Metadata identifier",
            "type": "string",
            "description": "UUID of the metadata"
        },
        "language": {
            "propertyOrder": 20,
            "title": "Metadata language",
            "$ref": "language.json"
        },
        "characterSet": {
            "propertyOrder": 30,
            "title": "Character Set",
            "description": "Character coding standard used for the metadata set",
            "$ref": "character-set.json",
            "options": {
                "hidden": true
            }
        },
        "metadataStandardName": {
            "propertyOrder": 40,
            "title": "Metadata standard name",
            "type": "string",
            "enum": [
                "ISO 19115:2003/19139"
            ],
            "options": {
                "hidden": true
            }
        },
        "metadataStandardVersion": {
            "propertyOrder": 50,
            "title": "Metadata standard version",
            "type": "string",
            "default": "1",
            "options": {
                "hidden": true
            }
        },
        "parentIdentifier": {
            "propertyOrder": 60,
            "title": "Parent identifier",
            "type": "string",
            "description": "URI or UUID of the metadata to which this metadata is a subset (child)"
        },
        "dataIdentification": {
            "propertyOrder": 70,
            "title": "Data identification info",
            "$ref": "data-identification.json"
        },
        "referenceSystemIdentifier": {
            "propertyOrder": 80,
            "title": "Reference System",
            "type": "string",
            "enum": [
                "EPSG:4326 - WGS84"
            ]
        },
        "spatialRepresentationInfo": {
            "propertyOrder": 90,
            "title": "Spatial representation info",
            "$ref": "spatial-representation-info.json"
        },
        "distributionFormat": {
            "title": "Distribution format",
            "propertyOrder": 95,
            "type": "array",
            "format": "table",
            "items": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties":{
                    "version":{
                        "type":"string"
                    },
                    "name":{
                        "type":"string"
                    }
                }
            }
        },
        "dataQualityInfo": {
            "propertyOrder": 100,
            "title": "Data quality info",
            "type": "object",
            "required": [
                "scope"
            ],
            "properties": {
                "scope": {
                    "propertyOrder": 1,
                    "title": "Scope",
                    "description": "class of information to which the referencing entity applies",
                    "type": "string",
                    "enum": [
                        "dataset",
                        "series",
                        "attribute",
                        "attributeType",
                        "collectionHardware",
                        "collectionSession",
                        "nonGeographicDataset",
                        "dimensionGroup",
                        "feature",
                        "featureType",
                        "propertyType",
                        "fieldSession",
                        "software",
                        "service",
                        "model",
                        "tile"
                    ]
                },
                "lineage": {
                    "propertyOrder": 10,
                    "title": "Lineage",
                    "description": "Information about the events or source data used in constructing the data specified by the scope",
                    "type": "object",
                    "properties": {
                        "statement": {
                            "propertyOrder": 1,
                            "title": "Statement",
                            "description": "General explanation of the data producer about the lineage of the dataset",
                            "type": "string",
                            "format": "textarea"
                        },
                        "source": {
                            "propertyOrder": 10,
                            "title": "Source",
                            "description": "Information about the source data used in creating the data specified by the scope",
                            "type": "array",
                            "items": {
                                "title": "URI or UUID of the source metadata",
                                "type": "string"
                            }
                        }
                    },
                    "required": [
                        "statement"
                    ]
                }
            }
        }
    }
}