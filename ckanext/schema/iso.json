{
    "type": "object",
    "required": [
        "metadataStandardName",
        "fileIdentifier",
        "characterSet"
    ],
    "properties": {
        "fileIdentifier": {
            "propertyOrder": 1,
            "title": "Metadata identifier",
            "type": "string",
            "description": "UUID of the metadata"
        },
        "language": {
            "propertyOrder": 20,
            "title": "Metadata language",
            "$ref": "language.json"
        },
        "characterSet": {
            "propertyOrder": 30,
            "title": "Character Set",
            "$ref": "character-set.json"
        },
        "metadataStandardName": {
            "propertyOrder": 40,
            "title": "Metadata standard name",
            "type": "string",
            "enum": [
                "ISO 19115:2003/19139"
            ]
        },
        "metadataStandardVersion": {
            "propertyOrder": 50,
            "title": "Metadata standard version",
            "type": "string",
            "default": "1"
        },
        "parentIdentifier": {
            "propertyOrder": 60,
            "title": "Parent identifier",
            "type": "string",
            "description": "uri or UUID of the metadata parent"
        },
        "dataIdentification": {
            "propertyOrder": 70,
            "title": "Data identification info",
            "$ref": "data-identification.json"
        },
        "referenceSystemIdentifier": {
            "propertyOrder": 80,
            "title": "Reference System",
            "type": "string",
            "enum": [
                "EPSG:4326 - WGS84"
            ]
        },
        "spatialRepresentationInfo": {
            "propertyOrder": 90,
            "title": "Spatial representation info",
            "$ref": "spatial-representation-info.json"
        },
        "dataQualityInfo": {
            "propertyOrder": 100,
            "title": "Data quality info",
            "type": "object",
            "properties": {
                "scope": {
                    "propertyOrder": 1,
                    "title": "Scope",
                    "type": "string",
                    "enum": [
                        "dataset",
                        "series",
                        "attribute",
                        "attributeType",
                        "collectionHardware",
                        "collectionSession",
                        "nonGeographicDataset",
                        "dimensionGroup",
                        "feature",
                        "featureType",
                        "propertyType",
                        "fieldSession",
                        "software",
                        "service",
                        "model",
                        "tile"
                    ],
                    "description": "class of information to which the referencing entity applies http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_ScopeCode"
                },
                "lineage": {
                    "propertyOrder": 10,
                    "title": "Lineage",
                    "type": "object",
                    "properties": {
                        "statement": {
                            "propertyOrder": 1,
                            "title": "Statement",
                            "type": "string"
                        },
                        "source": {
                            "propertyOrder": 10,
                            "title": "Source",
                            "type": "array",
                            "format": "table",
                            "items": {
                                "title": "Metadata source",
                                "type": "string"
                            },
                            "description": "Source metadata"
                        }
                    },
                    "required": [
                        "statement"
                    ]
                }
            },
            "required": [
                "scope"
            ]
        }
    }
}