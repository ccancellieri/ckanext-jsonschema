{
    "type": "object",
    "properties":{
        "identificationInfo":{
            "type": "object",
            "properties":{
                "citation":{
                    "type":"object",
                    "properties":{
                        "title": {
                            "type":"string"
                        },
                        "date": {
                            "type":"array",
                            "items": {
                                "type":"object",
                                "properties":{
                                    "date": {
                                        "type":"string"
                                    },
                                    "dateType": {
                                        "type":"string",
                                        "enum":[
                                            "creation",
                                            "TODO",
                                            "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#CI_DateTypeCode"
                                        ]
                                    }
                                }
                            }
                        },
                        "edition": {
                            "type":"string"
                        },
                        "citedResponsibleParty":{
                            "$ref":"responsible-party.json"
                        },
                        "presentationForm": {
                            "type":"string",
                            "enum": [
                                "mapDigital",
                                "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#CI_PresentationFormCode"
                            ]
                        }
                    }
                },
                "abstract":{
                    "type":"string"
                },
                "language":{
                    "type":"string",
                    "enum": ["eng","todo"]
                },
                "purpose":{
                    "type":"string"
                },
                "status":{
                    "type":"string",
                    "enum": ["completed",
                        "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_ProgressCode"]
                },
                "characterSet":{
                    "$ref":"character-set.json"
                },
                "resourceConstraints":{
                    "oneOf":[
                        {
                            "otherConstraints": {
                                "type":"string"
                            },
                            "useConstraints": {
                                "type":"string",
                                "enum": ["license",
                                    "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_RestrictionCode"]
                            },
                            "accessConstraints": {
                                "type":"string",
                                "enum": ["copyright",
                                    "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_RestrictionCode"]
                            },
                            "useLimitation": {
                                "type":"string"
                            }
                        },
                        {
                            "useLimitation":{
                                "type":"string"
                            },
                            "userNote":{
                                "type":"string"
                            },
                            "classification":{
                                "type":"string"
                            },
                            "classificationSystem":{
                                "type":"string"
                            },
                            "handingDescription":{
                                "type":"string"
                            }
                        }
                    ]
                },
                "resourceMaintenance":{
                    "type":"object",
                    "properties":{
                        "maintenanceAndUpdateFrequency":{
                            "type":"string",
                            "enum": [
                                "asNeeded",
                                "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_MaintenanceFrequencyCode"
                            ]
                        },
                        "contact":{
                            "$ref":"responsible-party.json"
                        }
                    }
                },
                "supplementalInformation":{
                    "type":"string"
                },
                "topicCategory":{
                    "type":"string",
                    "enum": [
                        "climatologyMeteorologyAtmosphere",
                        "https://standards.iso.org/iso/19139/resources/gmxCodelists.xml#CI_DateTypeCode"
                    ]
                },
                "extent":{
                    "$ref":"extent.json"
                },
                "spatialResolution":{
                    "type":"object",
                    "oneOf":[
                        {
                            "properties":{
                                "distance":{
                                    "type":"string"
                                },
                                "unit":{
                                    "type":"string"
                                }
                            }
                        },
                        {
                            "properties":{
                                "scaleDenominator":{
                                    "type":"string"
                                }
                            }
                        }
                    ]
                },
                "pointOfContact":{
                    "$ref":"responsible-party.json"
                },
                "descriptiveKeywords":{
                    "type":"object",
                    "properties":{
                        "description":"In case of Type: temporal you may define keywords like: Daily or Monthly",
                        "type":{
                            "type":"string",
                            "enum":[
                                "temporal",
                                "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_KeywordTypeCode"
                            ]
                        },  
                        "keywords": {
                            "type":"array",
                            "items":{
                                "type":"string"
                            }
                        }
                    }
                },
                "aggregationInfo": {
                    "type":"array",
                    "items":{
                        "type":"object",
                        "properties":{
                            "associationType":{
                                "type":"string",
                                "enum":[
                                    "crossReference",
                                    "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#DS_AssociationTypeCode"
                                ]
                            },
                            "code":{
                                "type":"string",
                                "description":"f.e. UUID of the referenced metadata"
                            }
                        }
                    }
                }
            }
        }
    }

}