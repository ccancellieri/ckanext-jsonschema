{
    
    "type": "object",
    "required":[
        "citation","abstract","topicCategory","resourceMaintenance"
    ],
    "properties":{
        "citation":{
            "propertyOrder": 1,
            "type":"object",
            "required":[
                "title","date"
            ],
            "properties":{
                "title": {
                    "type":"string"
                },
                "date": {
                    "type":"array",
                    "items": {
                        "type":"object",
                        "properties":{
                            "date": {
                                "type":"string"
                            },
                            "dateType": {
                                "type":"string",
                                "enum":[
                                    "creation",
                                    "TODO",
                                    "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#CI_DateTypeCode"
                                ]
                            }
                        }
                    }
                },
                "edition": {
                    "type":"string"
                },
                "presentationForm": {
                    "type":"array",
                    "items": {
                        "type":"string",
                        "enum": [
                            "mapDigital",
                            "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#CI_PresentationFormCode"
                        ]
                    }
                }
            }
        },
        "abstract":{
            "propertyOrder": 10,
            "type":"string"
        },
        "purpose":{
            "type":"string"
        },
        "status":{
            "type":"string",
            "enum": ["completed"],
            "description": "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_ProgressCode"
        },
        "descriptiveKeywords":{
            "type":"object",
            "properties":{
                "type":{
                    "type":"string",
                    "enum":[
                        "temporal"
                    ],
                    "description":"http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_KeywordTypeCode"
                },  
                "keywords": {
                    "type":"array",
                    "items":{
                        "type":"string"
                    },
                    "description":"In case of Type: temporal you may define keywords like: Daily or Monthly"
                }
            }
        },
        "topicCategory":{
            "type":"string",
            "enum": [
                "climatologyMeteorologyAtmosphere"
            ],
            "description": "https://standards.iso.org/iso/19139/resources/gmxCodelists.xml#CI_DateTypeCode"
        },
        "resourceMaintenance":{
            "type":"object",
            "required": [
                "maintenanceAndUpdateFrequency"
            ],
            "properties":{
                "maintenanceAndUpdateFrequency":{
                    "type":"string",
                    "enum": [
                        "asNeeded"
                    ],
                    "description":"http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_MaintenanceFrequencyCode"
                }
            }
        },
        "resourceConstraints":{
            "anyOf":[
                {
                    "type":"object",
                    "properties":{
                        "otherConstraints": {
                            "type":"string"
                        },
                        "useConstraints": {
                            "type":"string",
                            "enum": ["license"],
                            "description":"http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_RestrictionCode"
                        },
                        "accessConstraints": {
                            "type":"string",
                            "enum": ["copyright",
                                "http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_RestrictionCode"]
                        },
                        "useLimitation": {
                            "type":"string"
                        }
                    }
                },
                {
                    "type":"object",
                    "properties":{
                        "useLimitation":{
                            "type":"string"
                        },
                        "userNote":{
                            "type":"string"
                        },
                        "classification":{
                            "type":"string"
                        },
                        "classificationSystem":{
                            "type":"string"
                        },
                        "handingDescription":{
                            "type":"string"
                        }
                    }
                }
            ]
        },
        "spatialRepresentationType":{
            "type":"string",
            "enum":[
                "grid","vector","textTable","tin","stereoModel","video"
            ],
            "description":"https://standards.iso.org/iso/19139/resources/gmxCodelists.xml#MD_SpatialRepresentationTypeCode"
        },
        "spatialResolution":{
            "type":"object",
            "oneOf":[
                {
                    "title":"Distance",
                    "properties":{
                        "distance":{
                            "type":"string"
                        },
                        "unit":{
                            "type":"string"
                        }
                    }
                },
                {
                    "title":"Scale",
                    "properties":{
                        "scaleDenominator":{
                            "type":"string"
                        }
                    }
                }
            ]
        },
        "extent":{
            "$ref":"extent.json"
        },
        "supplementalInformation":{
            "type":"string"
        },
        "language": {
            "$ref":"language.json"
        },
        "characterSet":{
            "$ref":"character-set.json"
        },
        "aggregationInfo": {
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "associationType":{
                        "type":"string",
                        "enum":[
                            "crossReference"
                        ],
                        "description":"http://standards.iso.org/iso/19139/resources/gmxCodelists.xml#DS_AssociationTypeCode"
                    },
                    "code":{
                        "type":"string",
                        "description":"f.e. UUID of the referenced metadata"
                    }
                }
            }
        }
    }
}