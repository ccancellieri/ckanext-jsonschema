{
  "type": "object",
  "required": [
    "citation",
    "abstract",
    "topicCategory",
    "resourceMaintenance"
  ],
  "properties": {
    "citation": {
      "propertyOrder": 1,
      "title": "Citation",
      "type": "object",
      "required": [
        "title"
      ],
      "properties": {
        "title": {
          "propertyOrder": 1,
          "title": "Title",
          "type": "string"
        },
        "dates": {
          "propertyOrder": 10,
          "title": "Date",
          "type": "array",
          "format": "table",
          "items": {
            "type": "object",
            "properties": {
              "date": {
                "propertyOrder": 1,
                "title": "Date",
                "type": "string",
                "format": "date"
              },
              "dateType": {
                "type": "string",
                "propertyOrder": 10,
                "title": "Date type",
                "enum": [
                  "creation",
                  "publication",
                  "revision"
                ]
              }
            }
          }
        },
        "edition": {
          "propertyOrder": 20,
          "title": "Edition",
          "type": "string"
        },
        "presentationForm": {
          "propertyOrder": 30,
          "title": "Presentation form",
          "type": "array",
          "format": "table",
          "items": {
            "type": "string",
            "enum": [
              "mapDigital",
              "mapHardcopy",
              "documentDigital",
              "imageDigital",
              "documentHardcopy",
              "imageHardcopy",
              "modelDigital",
              "modelHardcopy",
              "profileDigital",
              "profileHardcopy",
              "tableDigital",
              "tableHardcopy",
              "videoDigital",
              "videoHardcopy"
            ]
          }
        },
        "series": {
          "type":"object",
          "properties":{
            "name":{
              "title": "Name",
              "type":"string"
            },
            "issueIdentification":{
              "title":"Issue identification",
              "type":"string"
            },
            "page":{
              "title": "Page",
              "type":"string"
            }
          }
        },
        "otherCitationDetails":{
          "title": "Other Citation Details",
          "type":"string"
        },
        "collectiveTitle":{
          "title": "Collective title",
          "type":"string"
        },
        "ISBN":{
          "type":"string",
          "description": "International Standard Book Number"
        },
        "ISSN":{
          "type":"string",
          "description": "International Standard Serial Number"
        }
      }
    },
    "abstract": {
      "propertyOrder": 10,
      "title": "Abstract",
      "type": "string",
      "format": "textarea",
      "description": "Data description"
    },
    "purpose": {
      "propertyOrder": 20,
      "title": "Purpose",
      "type": "string"
    },
    "status": {
      "propertyOrder": 30,
      "title": "Status",
      "type": "string",
      "enum": [
        "completed",
        "onGoing",
        "planned",
        "required",
        "underDevelopment",
        "historicalArchive",
        "obsolete"
      ]
    },
    "descriptiveKeywords": {
      "propertyOrder": 30,
      "title": "Descriptive keywords",
      "type": "array",
      "format": "table",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "propertyOrder": 10,
            "title": "Type",
            "type": "string",
            "enum": [
              "discipline",
              "place",
              "stratum",
              "temporal",
              "theme"
            ]
          },
          "keywords": {
            "propertyOrder": 1,
            "title": "Keywords",
            "type": "array",
            "format": "table",
            "items": {
              "type": "string",
              "format": "autocomplete",
              "options": {
                "autocomplete": {
                  "search": "tag_keywords_autocomplete",
                  "getResultValue": "tag_getResultValue",
                  "renderResult": "tag_render",
                  "autoSelect": true
                }
              }
            },
            "description": "In case of Type: temporal you may define keywords like: Daily or Monthly"
          }
        }
      }
    },
    "topicCategory": {
      "title": "Topic category",
      "minItems": 1,
      "propertyOrder": 40,
      "type": "array",
      "format": "table",
      "items": {
        "type": "string",
        "enum": [
          "farming",
          "biota",
          "boundaries",
          "climatologyMeteorologyAtmosphere",
          "economy",
          "elevation",
          "environment",
          "geoscientificInformation",
          "health",
          "imageryBaseMapsEarthCover",
          "intelligenceMilitary",
          "inlandWaters",
          "location",
          "oceans",
          "planningCadastre",
          "society",
          "structure",
          "transportation",
          "utilitiesCommunication"
        ]
      }
    },
    "resourceMaintenance": {
      "propertyOrder": 50,
      "title": "Resource maintenance",
      "type": "object",
      "required": [
        "maintenanceAndUpdateFrequency"
      ],
      "properties": {
        "maintenanceAndUpdateFrequency": {
          "propertyOrder": 1,
          "title": "Maintenance and update frequency",
          "type": "string",
          "enum": [
            "asNeeded",
            "irregular",
            "notPlanned",
            "unknown",
            "biannually",
            "annually",
            "continual",
            "daily",
            "weekly",
            "fortnightly",
            "monthly",
            "quarterly"
          ]
        }
      }
    },
    "resourceConstraints": {
      "propertyOrder": 60,
      "title": "Resource Constraints",
      "type":"object",
      "properties":{
        "legalConstraints":{
          "title": "Legal constraints",
          "type": "object",
          "properties": {
            "otherConstraints": {
              "propertyOrder": 30,
              "title": "Other constraints",
              "type": "array",
              "items": {
                "format": "textarea",
                "type": "string"
              }
            },
            "useConstraints": {
              "propertyOrder": 20,
              "title": "Use constraints",
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "copyright",
                  "patent",
                  "patentPending",
                  "trademark",
                  "license",
                  "intellectualPropertyRights",
                  "restricted",
                  "otherRestrictions"
                ]
              }
            },
            "accessConstraints": {
              "propertyOrder": 10,
              "title": "Access constraints",
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "copyright",
                  "patent",
                  "patentPending",
                  "trademark",
                  "license",
                  "intellectualPropertyRights",
                  "restricted",
                  "otherRestrictions"
                ]
              }
            },
            "useLimitation": {
              "propertyOrder": 1,
              "title": "Use limitation",
              "type": "array",
              "items": {
                "format": "textarea",
                "type": "string"
              }
            }
          }
        },
        "constraints":{
          "title": "Constraints",
          "type": "object",
          "properties": {
            "useLimitation": {
              "propertyOrder": 1,
              "title": "Use limitation",
              "type": "array",
              "items": {
                "format": "textarea",
                "type": "string"
              }
            }
          }
        },
        "securityConstraints":{
          "title": "Security constraints",
          "type": "object",
          "properties": {
            "useLimitation": {
              "propertyOrder": 1,
              "title": "Use limitation",
              "type": "array",
              "items": {
                "format": "textarea",
                "type": "string"
              }
            },
            "userNote": {
              "propertyOrder": 10,
              "title": "User note",
              "type": "array",
              "items": {
                "format": "textarea",
                "type": "string"
              }
            },
            "classification": {
              "propertyOrder": 20,
              "title": "Classification",
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "confidential",
                  "restricted",
                  "secret",
                  "topSecret",
                  "unclassified"
                ]
              }
            },
            "classificationSystem": {
              "propertyOrder": 30,
              "title": "Classification system",
              "type": "array",
              "items": {
                "format": "textarea",
                "type": "string"
              }
            },
            "handlingDescription": {
              "propertyOrder": 40,
              "title": "Handling description",
              "type": "array",
              "items": {
                "format": "textarea",
                "type": "string"
              }
            }
          }
        }
      }
    },
    "spatialRepresentationType": {
      "propertyOrder": 70,
      "title": "Spatial representation type",
      "type":"array",
      "items":{
        "type": "string",
        "enum": [
          "grid",
          "vector",
          "textTable",
          "tin",
          "stereoModel",
          "video"
        ]
      }
    },
    "spatialResolution": {
      "propertyOrder": 80,
      "title": "Spatial resolution",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
            "distance": {
              "propertyOrder": 1,
              "title": "Distance",
              "type": "string"
            },
            "unit": {
              "propertyOrder": 10,
              "title": "Unit",
              "type": "string"
            },
            "scaleDenominator": {
              "propertyOrder": 20,
              "title": "Scale denominator",
              "type": "string"
            }
        }
      }
    },
    "extent": {
      "propertyOrder": 90,
      "title": "Extent",
      "$ref": "extent.json"
    },
    "supplementalInformation": {
      "propertyOrder": 100,
      "title": "Supplemental information",
      "type": "string",
      "format":"textarea"
    },
    "language": {
      "propertyOrder": 110,
      "title": "Language",
      "$ref": "language.json"
    },
    "characterSet": {
      "propertyOrder": 120,
      "title": "Character set",
      "$ref": "character-set.json"
    },
    "aggregationInfo": {
      "propertyOrder": 130,
      "title": "Aggregation info",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "associationType": {
            "propertyOrder": 1,
            "title": "Aggregation type",
            "type": "string",
            "enum": [
              "crossReference",
              "largerWorkCitation",
              "partOfSeamlessDatabase",
              "source",
              "stereoMate"
            ],
            "description": "Association type of the aggregate dataset (from: DS_AssociationTypeCode)"
          },
          "code": {
            "propertyOrder": 10,
            "title": "Code",
            "type": "string",
            "description": "f.e. UUID of the referenced metadata"
          }
        }
      }
    }
  }
}