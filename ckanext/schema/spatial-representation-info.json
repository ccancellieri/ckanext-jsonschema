{
    "type": "object",
    "anyOf": [
        {
            "type": "object",
            "title": "Raster spatial representation",
            "description":"GridSpatialRepresentation",
            "required": [
                "transformationParameterAvailability"
            ],
            "properties":{
                "numberOfDimensions":{
                    "type": "string"
                },
                "transformationParameterAvailability":{
                    "type": "boolean",
                    "format": "select",
                    "uniqueItems": true
                },
                "cellGeometry":{
                    "type": "string",
                    "enum":[
                        "area",
                        "point"
                     ]
                },
                "dimension":{
                    "type": "array",
                    "items": {
                        "type":"object",
                        "properties":{
                            "dimensionName":{
                                "type":"string",
                                "enum":[
                                    "row",
                                    "column",
                                    "vertical",
                                    "track",
                                    "crossTrack",
                                    "line",
                                    "sample",
                                    "time"
                                 ]
                            },
                            "dimensionSize":{
                                "type":"string"
                            },
                            "resolution": {
                                "type":"object",
                                "properties":{
                                    "uom": {
                                        "type":"string"
                                    },
                                    "value":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "type": "object",
            "title": "Vector spatial representation",
            "description":"VectorSpatialRepresentation",
            "properties":{
                "topologyLevel":{
                    "type":"string",
                    "enum": [
                        "geometryOnly",
                        "topology1D",
                        "fullPlanarGraph",
                        "surfaceGraph",
                        "fullSurfaceGraph",
                        "topology3D",
                        "fullTopology3D",
                        "abstract"
                    ],
                    "description":"MD_TopologyLevelCode"
                },
                "geometricObjects":{
                    "type": "array",
                    "items": {
                        "type":"object",
                        "properties":{
                            "geometricObjectCount":{
                                "type":"string"
                            },
                            "geometricObjectType":{
                                "type":"string",
                                "enum":[
                                    "surface",
                                    "complex",
                                    "composite",
                                    "curve",
                                    "point",
                                    "solid"
                                ]
                            }
                        }
                    }
                }
            }
        } 
    ]
}